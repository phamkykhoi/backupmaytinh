<%= form_for @posts do |form| %>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: 'form-control', style: 'height:80px; resize:none;'  %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary' %>
    <%= link_to "Back", microposts_path, { :title => "Back User", :class => "btn btn-danger" } %>
  </div>
<% end %>
