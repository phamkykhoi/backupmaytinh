<h3 class="sub-header">List Micropost</h3>
<p align="right">
<%= link_to "New Post", new_micropost_path, { :title => "New Post", :class => "btn btn-primary" }  %>
</p>
<table class="table table-striped" width="647">
  <thead>
    <tr>
      <th>#</th>
      <th>Post Content</th>
      <th>User</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% if defined? @posts %>
    <% @posts.each do |p| %>
      <tr>
        <td><%= p.id %></td>
        <td><%= p.content %></td>
        <td><%= p.user.fullname %></td>
        <th><%= link_to "Show", micropost_path(p) %></th>
        <td><%= link_to "Edit", edit_micropost_path(p) %></td>
        <td><%= link_to 'Destroy', micropost_path(p),
                          method: :delete,
                          data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% else %>
      <tr>
        <td colspan='5' height='45'>User empty</td>
      </tr>
    <% end %>
  </tbody>
</table>