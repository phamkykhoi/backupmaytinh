<%= form_for @exams do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :time %>
    <%= form.text_field :time, class: "form-control" %>
  </div>

  <%= form.submit class: "btn btn-info" %>
<% end %>