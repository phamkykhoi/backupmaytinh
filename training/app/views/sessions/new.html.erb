<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Login System</h1>
            <% flash.each do |message_type, message| %>
              <div class="alert alert-<%= message_type %>"><%= message %></div>
            <% end %>
            <div class="account-wall">
                <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                    alt="">
                <%= form_for(:session, url: login_path, html: {:class => "form-signin"}) do |form| %>
                  <%= form.email_field :email, class: 'form-control', placeholder: "Email" %>
                  <%= form.password_field :password, class: 'form-control', placeholder: "Password" %>
                  <%= form.submit 'Login', class: "btn btn-lg btn-primary btn-block"  %>
                <% end %>
            </div>
            <a href="#" class="text-center new-account">Create an account </a>
        </div>
    </div>
</div>